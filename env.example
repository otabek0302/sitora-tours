# Sitora Tours - Environment Variables Template
# Copy this to .env and update values for production

# Database Configuration (Docker)
DATABASE_URI=postgresql://postgres:sitoratours2024@postgres:5432/sitora_tour

# Payload CMS Secret - IMPORTANT: Generate secure key in production
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-payload-secret-key-change-this-in-production

# Production URLs - Update with your domain
NEXT_PUBLIC_SITE_URL=https://sitoratour.uz
NEXT_PUBLIC_SERVER_URL=https://sitoratour.uz
NEXT_PUBLIC_API_URL=https://sitoratour.uz

# Leave empty for root domain deployment (no subpath)
NEXT_PUBLIC_BASE_PATH=

# Node Environment
NODE_ENV=production

# Telegram Notifications (Optional - for contact forms)
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=
NEXT_PUBLIC_TELEGRAM_CHAT_ID=

# PostgreSQL Password (must match DATABASE_URI)
POSTGRES_PASSWORD=sitoratours2024

