# Database Configuration (Docker)
DATABASE_URI=postgresql://postgres:password@postgres:5432/dbname

# Payload CMS Secret - IMPORTANT: Generate secure key in production
PAYLOAD_SECRET=secret

# Production URLs - Update with your domain
NEXT_PUBLIC_SITE_URL=http://domain.com
NEXT_PUBLIC_SERVER_URL=http://domain.com
NEXT_PUBLIC_API_URL=http://domain.com

# Node Environment
NODE_ENV=production

# Telegram Notifications (Optional - for contact forms)
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=token
NEXT_PUBLIC_TELEGRAM_CHAT_ID=id

# PostgreSQL Password (must match DATABASE_URI)
POSTGRES_PASSWORD=pass